{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "predev": "tsc",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "lint:check": "eslint \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "test": "jest",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "migrate:up": "node ./src/db/migrate.js",
    "seedd": "node --loader esbuild-register/loader -r esbuild-register ./src/db/seed/index.ts",
    "seed": "ts-node src/db/seed/index.ts"
  },
  "dependencies": {
    "@types/node": "^20.11.19",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "drizzle-orm": "^0.39.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "drizzle-kit": "^0.30.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
